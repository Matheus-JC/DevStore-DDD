@model DevStore.Sales.Application.Queries.DTOs.ShoppingCartDTO
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <style>
        .blank_row {
            height: 55px !important;
            background-color: #FFFFFF;
        }
    </style>

    <div class="row">
        <div class="col-xs-12">

            <vc:summary />

            @{
                if (Model?.Items != null)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th class="text-center">Value</th>
                                <th class="text-center">Total Value</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="col-sm-4 col-md-4">
                                            <div class="media">
                                                <div class="media-body">
                                                    <h4 class="media-heading">
                                                        <a asp-controller="Catalog" asp-action="ProductDetail" asp-route-id="@item.ProductId" 
                                                            style="text-decoration:none">
                                                            @item.ProductName
                                                        </a>
                                                    </h4>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="col-sm-3 col-md-3" style="text-align: center">
                                            <form method="post" asp-controller="ShoppingCart" asp-action="UpdateItem">
                                                <input type="hidden" id="Id" name="Id" value="@item.ProductId" />
                                                <div class="row" style="float: left">
                                                    <input style="width: 70px" type="text" class="form-control" name="quantity"
                                                           id="quantity" value="@item.Quantity">
                                                </div>
                                                <div class="row" style="float: right">
                                                    <button type="submit" class="btn btn-success">
                                                        <span class="fas fa-sync"></span>
                                                    </button>
                                                </div>
                                            </form>
                                        </td>
                                        <td class="col-sm-1 col-md-1 text-center"><strong>@item.UnitValue.ToString("C")</strong></td>
                                        <td class="col-sm-1 col-md-1 text-center"><strong>@item.TotalValue.ToString("C")</strong></td>

                                        <td class="col-sm-1 col-md-1">
                                            <form method="post" asp-controller="ShoppingCart" asp-action="RemoveItem">
                                                <input type="hidden" id="Id" name="Id" value="@item.ProductId" />
                                                <button type="submit" class="btn btn-danger">
                                                    <span class="fas fa-trash-alt"></span>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            <tr class="blank_row">
                                <td colspan="5"></td>
                            </tr>
                            <tr>
                                <td> </td>
                                <td> </td>
                                <td> </td>
                                <td><h5>Subtotal</h5></td>
                                <td class="text-right"><h5><strong>@Model.SubTotal.ToString("C")</strong></h5></td>
                            </tr>
                            <tr>
                                <td> </td>
                                <td>
                                    <form method="post" asp-controller="ShoppingCart" asp-action="ApplyVoucher">
                                        <div class="row" style="float: left">
                                            <input placeholder="Voucher" style="width: 150px" type="text" class="form-control" name="VoucherCode" 
                                                id="VoucherCode" value="@Model.VoucherCode">
                                        </div>
                                        <div class="row" style="float: right">
                                            <button type="submit" class="btn btn-success">
                                                <span class="fas fa-sync"></span>
                                            </button>
                                        </div>
                                    </form>
                                </td>
                                <td> </td>
                                <td><h5>Discount</h5></td>
                                <td class="text-right"><h5><strong>@Model.Discount.ToString("C")</strong></h5></td>
                            </tr>
                            <tr>
                                <td> </td>
                                <td> </td>
                                <td> </td>
                                <td>
                                    <h3>Total</h3>
                                </td>
                                <td class="text-right">
                                    <h3><strong>@Model.TotalValue.ToString("C")</strong></h3>
                                </td>
                            </tr>
                            <tr>
                                <td> </td>
                                <td> </td>
                                <td> </td>
                                <td>
                                    <a asp-controller="Catalog" asp-action="Index" class="btn btn-dark">
                                        <span class="fa fa-shopping-cart"></span> <br /> Keep Buying
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="ShoppingCart" asp-action="PurchaseSummary" class="btn btn-success">
                                        <span class="fas fa-play"></span><br /> Finalize Purchase
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }
                else
                {
                    <div><p>Empty Shopping Cart</p></div>
                }
            }
        </div>
    </div>
</div>